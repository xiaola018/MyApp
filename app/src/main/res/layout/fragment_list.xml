<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f4f6"
    android:padding="15dp"
    tools:ignore="MissingConstraints">

    <!-- 清空，生成，导入，粘贴输入 -->

    <TextView
        android:id="@+id/tv_copy"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/shape_stroke_1dp_radius_5dp"
        android:gravity="center"
        android:text="复 制"
        android:textColor="@color/teal_200"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_edit"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/shape_stroke_1dp_radius_5dp"
        android:gravity="center"
        android:text="编 辑"
        android:textColor="@color/teal_200"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_num_and_price"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:text="0 张    0 元"
        android:textColor="@color/color_333333"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_all_send"
        android:layout_width="240dp"
        android:enabled="false"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/shape_btn_enable"
        android:text="全部发送"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/btn_all_send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_copy" />

</androidx.constraintlayout.widget.ConstraintLayout>